<% if @follower.present? %>
  <% if @follower.errors.any? %>
    <% @follower.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new follower
</h1>


<hr>

<form action="/create_follower" method="post">

  <div class="form-group">
    <label for="follower_user_id">
      Follower user
    </label>

    <%= select_tag(:follower_user_id, options_from_collection_for_select(User.all, :id, :username, @follower.follower_user_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="folowee_user_id">
      Folowee user
    </label>

    <%= select_tag(:folowee_user_id, options_from_collection_for_select(User.all, :id, :username, @follower.folowee_user_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create follower
  </button>
</form>

<hr>

<a href="/followers">
  Go back
</a>
