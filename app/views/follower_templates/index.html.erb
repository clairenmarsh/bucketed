<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Follower user
        </th>

        <th>
          Folowee user
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @followers.each do |follower| %>
      <tr>
        <!-- Display follower.id start -->
        <td>
          <%= follower.id %>
        </td>
        <!-- Display follower.id end -->

        <!-- Display follower.follower_user_id start -->
        <td>
          <%= follower.follower_user_id %>
        </td>
        <!-- Display follower.follower_user_id end -->

        <!-- Display follower.folowee_user_id start -->
        <td>
          <%= follower.folowee_user_id %>
        </td>
        <!-- Display follower.folowee_user_id end -->

        <!-- Display follower.created_at start -->
        <td>
          <%= time_ago_in_words(follower.created_at) %> ago
        </td>
        <!-- Display follower.created_at end -->

        <!-- Display follower.updated_at start -->
        <td>
          <%= time_ago_in_words(follower.updated_at) %> ago
        </td>
        <!-- Display follower.updated_at end -->

        <td>
          <a href="/followers/<%= follower.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
