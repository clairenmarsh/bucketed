<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Follower #<%= @follower.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/followers" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/followers/<%= @follower.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit follower
        </a>
      </div>

      <div class="col">
        <a href="/delete_follower/<%= @follower.id %>" class="btn btn-block btn-outline-secondary">
          Delete follower
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Follower user
      </dt>
      <dd>
        <% if @follower.follower_user.present? %>
          <a href="/users/<%= @follower.follower_user_id %>">
            <%= @follower.follower_user.username %>
          </a>
        <% end %>
      </dd>

      <dt>
        Folowee user
      </dt>
      <dd>
        <% if @follower.folowee_user.present? %>
          <a href="/users/<%= @follower.folowee_user_id %>">
            <%= @follower.folowee_user.username %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@follower.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@follower.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

