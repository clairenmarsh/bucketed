<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Activities

    <a data-toggle="collapse" href="#photo_activities_new_form">
      Add activity
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @photo.activities.each do |activity| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/activities/<%= activity.id %>">
          <%= activity.activity_type %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_activity_from_photo/<%= activity.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="photo_activities_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "photo_templates/photo_activities_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
