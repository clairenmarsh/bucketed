<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All comments
    </h1>

    <a href="/comments/new" class="btn btn-block btn-outline-secondary">
      Add a new comment
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Body
        </th>

        <th>
          Poster
        </th>

        <th>
          Activity
        </th>

        <th>
          Bucket
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @comments.each do |comment| %>
      <tr>
        <!-- Display comment.id start -->
        <td>
          <%= comment.id %>
        </td>
        <!-- Display comment.id end -->

        <!-- Display comment.body start -->
        <td>
          <%= comment.body %>
        </td>
        <!-- Display comment.body end -->

        <!-- Display comment.poster_id start -->
        <td>
          <% if comment.poster.present? %>
            <a href="/users/<%= comment.poster.id %>">
              <%= comment.poster.username %>
            </a>
          <% end %>
        </td>
        <!-- Display comment.poster_id end -->

        <!-- Display comment.activity_id start -->
        <td>
          <% if comment.activity.present? %>
            <a href="/activities/<%= comment.activity.id %>">
              <%= comment.activity.activity_type %>
            </a>
          <% end %>
        </td>
        <!-- Display comment.activity_id end -->

        <!-- Display comment.bucket_id start -->
        <td>
          <%= comment.bucket_id %>
        </td>
        <!-- Display comment.bucket_id end -->

        <!-- Display comment.created_at start -->
        <td>
          <%= time_ago_in_words(comment.created_at) %> ago
        </td>
        <!-- Display comment.created_at end -->

        <!-- Display comment.updated_at start -->
        <td>
          <%= time_ago_in_words(comment.updated_at) %> ago
        </td>
        <!-- Display comment.updated_at end -->

        <td>
          <a href="/comments/<%= comment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @comments, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
