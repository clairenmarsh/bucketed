<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All buckets
    </h1>

    <a href="/buckets/new" class="btn btn-block btn-outline-secondary">
      Add a new bucket
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "bucket_templates/buckets_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Location
        </th>

        <th>
          User
        </th>

        <th>
          Bucket name
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @buckets.each do |bucket| %>
      <tr>
        <!-- Display bucket.id start -->
        <td>
          <%= bucket.id %>
        </td>
        <!-- Display bucket.id end -->

        <!-- Display bucket.location_id start -->
        <td>
          <% if bucket.location.present? %>
            <a href="/locations/<%= bucket.location.id %>">
              <%= bucket.location.city_name %>
            </a>
          <% end %>
        </td>
        <!-- Display bucket.location_id end -->

        <!-- Display bucket.user_id start -->
        <td>
          <% if bucket.user.present? %>
            <a href="/users/<%= bucket.user.id %>">
              <%= bucket.user.username %>
            </a>
          <% end %>
        </td>
        <!-- Display bucket.user_id end -->

        <!-- Display bucket.bucket_name start -->
        <td>
          <%= bucket.bucket_name %>
        </td>
        <!-- Display bucket.bucket_name end -->

        <!-- Display bucket.photo_id start -->
        <td>
          <% if bucket.photo.present? %>
            <a href="/photos/<%= bucket.photo.id %>">
              <%= bucket.photo.created_at %>
            </a>
          <% end %>
        </td>
        <!-- Display bucket.photo_id end -->

        <!-- Display bucket.created_at start -->
        <td>
          <%= time_ago_in_words(bucket.created_at) %> ago
        </td>
        <!-- Display bucket.created_at end -->

        <!-- Display bucket.updated_at start -->
        <td>
          <%= time_ago_in_words(bucket.updated_at) %> ago
        </td>
        <!-- Display bucket.updated_at end -->

        <td>
          <a href="/buckets/<%= bucket.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @buckets, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
