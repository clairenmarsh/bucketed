<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Bucket #<%= @bucket.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/buckets" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/buckets/<%= @bucket.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit bucket
        </a>
      </div>

      <div class="col">
        <a href="/delete_bucket/<%= @bucket.id %>" class="btn btn-block btn-outline-secondary">
          Delete bucket
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Location
      </dt>
      <dd>
        <% if @bucket.location.present? %>
          <a href="/locations/<%= @bucket.location_id %>">
            <%= @bucket.location.city_name %>
          </a>
        <% end %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @bucket.user.present? %>
          <a href="/users/<%= @bucket.user_id %>">
            <%= @bucket.user.username %>
          </a>
        <% end %>
      </dd>

      <dt>
        Bucket name
      </dt>
      <dd>
        <%= @bucket.bucket_name %>
      </dd>

      <dt>
        Photo
      </dt>
      <dd>
        <% if @bucket.photo.present? %>
          <a href="/photos/<%= @bucket.photo_id %>">
            <%= @bucket.photo.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@bucket.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@bucket.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "bucket_templates/bucket_activities" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "bucket_templates/bucket_favorites" %>
  </div>
</div>
