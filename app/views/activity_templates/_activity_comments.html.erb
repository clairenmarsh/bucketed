<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Comments

    <a data-toggle="collapse" href="#activity_comments_new_form">
      Add comment
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @activity.comments.each do |comment| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/comments/<%= comment.id %>">
          <%= comment.created_at %>
        </a>

        <a href="/delete_comment_from_activity/<%= comment.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="activity_comments_new_form">
        <%= render partial: "activity_templates/activity_comments_new_form" %>
      </div>
    </div>

  </ul>
</div>
