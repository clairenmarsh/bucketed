<!-- Form comment start -->
<form action="/create_comment_from_activity" method="post">
<!-- Form comment end -->

  <!-- Label and input for body start -->
  <div class="form-group">
    <label for="body">
      Body
    </label>

    <!-- Input for body start -->
    <input type="text" id="body" name="body" class="form-control" value="<%= @comment.body %>">
    <!-- Input for body end -->
  </div>
  <!-- Label and input for body end -->

  <!-- Label and input for poster_id start -->
  <div class="form-group">
    <label for="poster_id">
      Poster
    </label>

    <!-- Input for poster_id start -->
    <%= select_tag(:poster_id, options_from_collection_for_select(User.all, :id, :username, @comment.poster_id), :class => "form-control") %>
    <!-- Input for poster_id end -->
  </div>
  <!-- Label and input for poster_id end -->

  <!-- Label and input for activity_id start -->
  <!-- Input for activity_id start -->
  <input type="hidden" name="activity_id" value="<%= @activity.id %>">
  <!-- Input for activity_id end -->

  <!-- Label and input for bucket_id start -->
  <div class="form-group">
    <label for="bucket_id">
      Bucket
    </label>

    <!-- Input for bucket_id start -->
    <input type="text" id="bucket_id" name="bucket_id" class="form-control" value="<%= @comment.bucket_id %>">
    <!-- Input for bucket_id end -->
  </div>
  <!-- Label and input for bucket_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create comment
  </button>
</form>
