<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All favorites
    </h1>

    <a href="/favorites/new" class="btn btn-block btn-outline-secondary">
      Add a new favorite
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "favorite_templates/favorites_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Activity
        </th>

        <th>
          Bucket
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @favorites.each do |favorite| %>
      <tr>
        <td>
          <%= favorite.id %>
        </td>

        <td>
          <% if favorite.activity.present? %>
            <a href="/activities/<%= favorite.activity.id %>">
              <%= favorite.activity.activity_type %>
            </a>
          <% end %>
        </td>

        <td>
          <% if favorite.bucket.present? %>
            <a href="/buckets/<%= favorite.bucket.id %>">
              <%= favorite.bucket.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(favorite.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(favorite.updated_at) %> ago
        </td>

        <td>
          <a href="/favorites/<%= favorite.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @favorites, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
