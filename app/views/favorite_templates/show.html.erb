<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Favorite #<%= @favorite.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/favorites" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link favorite start -->
      <div class="col">
        <a href="/favorites/<%= @favorite.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit favorite
        </a>
      </div>
      <!-- Edit link favorite end -->

      <!-- Delete link favorite start -->
      <div class="col">
        <a href="/delete_favorite/<%= @favorite.id %>" class="btn btn-block btn-outline-secondary">
          Delete favorite
        </a>
      </div>
      <!-- Delete link favorite end -->
    </div>

    <dl>
      <dt>
        Activity
      </dt>
      <!-- Display activity_id start -->
      <dd>
        <% if @favorite.activity.present? %>
          <a href="/activities/<%= @favorite.activity_id %>">
            <%= @favorite.activity.activity_type %>
          </a>
        <% end %>
      </dd>
      <!-- Display activity_id end -->

      <dt>
        Bucket
      </dt>
      <!-- Display bucket_id start -->
      <dd>
        <% if @favorite.bucket.present? %>
          <a href="/buckets/<%= @favorite.bucket_id %>">
            <%= @favorite.bucket.created_at %>
          </a>
        <% end %>
      </dd>
      <!-- Display bucket_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@favorite.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@favorite.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

