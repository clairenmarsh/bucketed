<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All locations
    </h1>

    <a href="/locations/new" class="btn btn-block btn-outline-secondary">
      Add a new location
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->
<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "location_templates/all_photos_map" %>
  </div>
</div>
<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          City name
        </th>

        <th>
          Address
        </th>

        <th>
          State name
        </th>

        <th>
          Country name
        </th>

        <th>
          Created by user
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @locations.each do |location| %>
      <tr>
        <!-- Display location.id start -->
        <td>
          <%= location.id %>
        </td>
        <!-- Display location.id end -->

        <!-- Display location.city_name start -->
        <td>
          <%= location.city_name %>
        </td>
        <!-- Display location.city_name end -->

        <!-- Display location.address start -->
        <td>
          <%= location.address %>
        </td>
        <!-- Display location.address end -->

        <!-- Display location.state_name start -->
        <td>
          <%= location.state_name %>
        </td>
        <!-- Display location.state_name end -->

        <!-- Display location.country_name start -->
        <td>
          <%= location.country_name %>
        </td>
        <!-- Display location.country_name end -->

        <!-- Display location.created_by_user_id start -->
        <td>
          <% if location.user.present? %>
            <a href="/users/<%= location.user.id %>">
              <%= location.user.username %>
            </a>
          <% end %>
        </td>
        <!-- Display location.created_by_user_id end -->

        <!-- Display location.created_at start -->
        <td>
          <%= time_ago_in_words(location.created_at) %> ago
        </td>
        <!-- Display location.created_at end -->

        <!-- Display location.updated_at start -->
        <td>
          <%= time_ago_in_words(location.updated_at) %> ago
        </td>
        <!-- Display location.updated_at end -->

        <td>
          <a href="/locations/<%= location.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @locations, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
